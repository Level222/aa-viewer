{
  "manifest_version": 3,
  "name": "AAびゅーあー",
  "version": "1.0.0",
  "description": "AA（アスキーアート）用のフォントをwebページに適用したり、画像化したものをダウンロードしたりできます。",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+M"
      }
    }
  },

  "action": {
    "default_popup": "popup/popup.html"
  }
}